<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_gray"
    tools:context=".activity.user_info_act.UserInfoFragment">


    <TextView
        android:id="@+id/textView30"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/sky_blue_like"
        android:gravity="center"
        android:text="@string/gerenxingxi"
        android:textColor="@color/text_black_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/tv_back_to_detail_frag_fanhui"
        android:textColor="@drawable/text_view_click_bg"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintEnd_toEndOf="@+id/textView30"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/back_icon"
        app:layout_constraintBottom_toBottomOf="@+id/textView30"
        app:layout_constraintStart_toStartOf="@+id/textView30"
        app:layout_constraintTop_toTopOf="@+id/textView30" />

    <com.example.feijibook.widget.MyNestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_portrait"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_item_pressed2"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="头像"
                    android:textColor="@color/text_black_color"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view26" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="#ffffffff"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="账户"
                    android:textColor="@color/text_black_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view27" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="123456"
                    android:textColor="@color/text_light_gray_color"
                    app:layout_constraintBottom_toBottomOf="@+id/textView34"
                    app:layout_constraintEnd_toEndOf="@+id/textView34"
                    app:layout_constraintTop_toBottomOf="@+id/view27" />

                <TextView
                    android:id="@+id/tv_nickname_item"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@drawable/bg_item_pressed2"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="昵称"
                    android:textColor="@color/text_black_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view28" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_light_gray_color"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_nickname_item"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/view28" />

                <TextView
                    android:id="@+id/tv_sex_item"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@drawable/bg_item_pressed2"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="性别"
                    android:textColor="@color/text_black_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view29" />

                <TextView
                    android:id="@+id/tv_sign_out"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@drawable/bg_item_pressed2"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@color/text_black_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view31" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textColor="@color/text_light_gray_color"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sex_item"
                    app:layout_constraintEnd_toStartOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/tv_sex_item" />

                <View
                    android:id="@+id/view27"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_portrait" />

                <View
                    android:id="@+id/view26"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view28"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView34" />

                <View
                    android:id="@+id/view29"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nickname_item" />


                <View
                    android:id="@+id/view30"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sex_item" />

                <View
                    android:id="@+id/view31"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view30" />

                <View
                    android:id="@+id/view32"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_out" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/icon_right"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_nickname_item"
                    app:layout_constraintEnd_toEndOf="@+id/tv_nickname_item"
                    app:layout_constraintTop_toBottomOf="@+id/view28" />


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/icon_right"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sex_item"
                    app:layout_constraintEnd_toEndOf="@+id/tv_sex_item"
                    app:layout_constraintTop_toTopOf="@+id/tv_sex_item" />


                <ImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_portrait"
                    app:layout_constraintEnd_toEndOf="@+id/tv_portrait"
                    app:layout_constraintTop_toBottomOf="@+id/view26" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </com.example.feijibook.widget.MyNestedScrollView>

</android.support.constraint.ConstraintLayout>