<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view1"
        android:background="@color/line_gray"
        android:layout_marginStart="17dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ImageView
        android:id="@+id/iv_remove_optional_to_addible"
        android:src="@drawable/ic_remove_circle_black_24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_below="@id/view1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_optional_type"
        android:layout_toEndOf="@id/iv_remove_optional_to_addible"
        android:layout_marginStart="8dp"
        android:src="@drawable/category_e_dress"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/tv_optional_type_name"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/iv_optional_type"
        android:text="餐饮"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_drag_item"
        android:src="@drawable/drag_icon"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:layout_alignParentEnd="true"
        android:layout_width="27dp"
        android:layout_height="27dp" />

</RelativeLayout>