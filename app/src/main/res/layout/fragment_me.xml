<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray"
    tools:context=".activity.main_act.me_frag.MeFragment">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="@color/sky_blue_like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_portrait"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19999999" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jizhangzongtianshu"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_portrait"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nick_name"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="51dp"
            android:text="@string/jizhangzongbishu"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_portrait"
            app:layout_constraintTop_toBottomOf="@+id/tv_nick_name"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/tv_day_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="365"
            android:textColor="@color/text_black_color"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5" />

        <TextView
            android:id="@+id/tv_record_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="1000"
            android:textColor="@color/text_black_color"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView21"
            app:layout_constraintEnd_toEndOf="@+id/textView21"
            app:layout_constraintStart_toStartOf="@+id/textView21" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="SweetHeart"
            android:textColor="@color/text_black_color"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_portrait"
            app:layout_constraintStart_toStartOf="@+id/iv_portrait"
            app:layout_constraintTop_toBottomOf="@+id/iv_portrait" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/view19"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/line_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

    <com.example.feijibook.widget.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view19">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@color/text_white"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="声音开关"
                    android:textColor="@color/text_black_color"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view28" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@color/text_white"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="手势密码"
                    android:textColor="@color/text_black_color"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view29" />

                <TextView
                    android:id="@+id/tv_change_password"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@drawable/bg_item_pressed2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="修改密码"
                    android:textColor="@color/text_black_color"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view30" />

                <View
                    android:id="@+id/view28"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view20" />

                <View
                    android:id="@+id/view29"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:layout_marginStart="24dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView36" />

                <View
                    android:id="@+id/view30"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:layout_marginStart="24dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView37" />

                <View
                    android:id="@+id/view31"
                    android:layout_width="0dp"
                    android:layout_height="0.2dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_change_password" />

                <View
                    android:id="@+id/view20"
                    android:layout_width="1dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/line_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.feijibook.widget.my_constraintlayout.MyTextView
                    android:id="@+id/tv_photo_album"
                    android:layout_width="170dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_constraint_layout"
                    android:drawableTop="@drawable/icon_photo_album"
                    android:gravity="center_horizontal"
                    android:text="@string/zhaopian2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:translationZ="6dp"
                    app:layout_constraintEnd_toStartOf="@+id/view20"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view20" />

                <com.example.feijibook.widget.my_constraintlayout.MyTextView
                    android:id="@+id/tv_video_album"
                    android:layout_width="170dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_constraint_layout"
                    android:drawableTop="@drawable/icon_video_album"
                    android:gravity="center_horizontal"
                    android:text="@string/shiping2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:translationZ="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toEndOf="@+id/view20"
                    app:layout_constraintTop_toTopOf="@+id/view20" />


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/icon_right"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_change_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view30" />

                <Switch
                    android:id="@+id/switch_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView36"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view28" />

                <Switch
                    android:id="@+id/switch_gesture_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView37"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView37"
                    app:layout_constraintVertical_bias="0.55" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </com.example.feijibook.widget.MyNestedScrollView>




</android.support.constraint.ConstraintLayout>