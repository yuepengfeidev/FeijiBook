<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sign_in"
    tools:context=".activity.login_in_act.LoginInFragment">


    <CheckBox
        android:id="@+id/cb_dispose_password"
        android:layout_width="65dp"
        android:layout_height="43dp"
        android:layout_marginEnd="20dp"
        android:button="@drawable/selector_password_show"
        android:buttonTint="@color/line_gray"
        android:scaleX="0.6"
        android:scaleY="0.6"
        app:layout_constraintBottom_toBottomOf="@+id/img_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_password"
        app:layout_constraintVertical_bias="0.100000024" />


    <EditText
        android:id="@+id/et_account"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_account"
        android:background="#00000000"
        android:hint="Account"
        android:inputType="number"
        android:textColor="@color/text_black_color"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_account"
        app:layout_constraintEnd_toEndOf="@+id/view22"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_account"
        app:layout_constraintTop_toTopOf="@+id/img_account"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_account"
        android:layout_width="35dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/icon_login_account"
        android:tint="@color/line_gray"
        app:layout_constraintBottom_toTopOf="@+id/view22"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_password"
        android:layout_width="35dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/icon_login_pw"
        android:tint="@color/line_gray"
        app:layout_constraintBottom_toTopOf="@+id/view23"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view22"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="32dp"
        android:background="@color/line_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view23"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="32dp"
        android:background="@color/line_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view22" />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_password"
        android:background="#00000000"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="20sp"
        android:textColor="@color/text_black_color"
        app:layout_constraintBottom_toBottomOf="@+id/img_password"
        app:layout_constraintEnd_toStartOf="@+id/cb_dispose_password"
        app:layout_constraintStart_toEndOf="@+id/img_password"
        app:layout_constraintTop_toTopOf="@+id/img_password"
        tools:ignore="TextFields" />

    <CheckBox
        android:id="@+id/cb_save_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Save the password"
        android:textColor="@color/text_white"
        android:textSize="18sp"
        android:checked="true"
        app:layout_constraintStart_toStartOf="@+id/view23"
        app:layout_constraintTop_toBottomOf="@+id/view23" />

    <Button
        android:id="@+id/bt_sign_in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_bt_sign_in"
        android:text="SIGN IN"
        android:textColor="@color/text_white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_save_password"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_sign_in"
        app:layout_constraintVertical_bias="0.71000004" />

    <TextView
        android:id="@+id/tv_to_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:background="#00000000"
        android:text="SIGN UP"
        android:textColor="@color/text_white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView28"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="@+id/textView28"
        app:layout_constraintVertical_bias="0.47000003" />
</android.support.constraint.ConstraintLayout>